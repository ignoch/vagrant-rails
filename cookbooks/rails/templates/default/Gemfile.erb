source "http://rubygems.org"

gem "rails", "<%= node[:rails][:version]%>"
gem "haml-rails"
gem "uglifier"
gem "jbuilder"
gem "sass-rails"
gem "coffee-rails"
gem "therubyracer"
gem "turbolinks"

gem "jquery-rails"
gem "<%= @db_gem %>"

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

group :development, :test do
  gem 'rspec-rails'
  gem 'guard-rspec'
  gem 'factory_girl_rails'
end

group :test do
  gem 'database_cleaner'
end
