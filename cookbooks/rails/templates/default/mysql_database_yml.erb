development: &defaults
  adapter: mysql
  encoding: utf8
  database: <%= node[:rails][:app_name] %>_dev
  username: <%= node[:ruby][:user] %>
  password:
  socket: /var/run/mysqld/mysqld.sock
  pool: 5
  timeout: 5000

test:
  <<: *defaults
  database: <%= node[:rails][:app_name] %>_test

production:
  <<: *defaults
  database: <%= node[:rails][:app_name] %>
